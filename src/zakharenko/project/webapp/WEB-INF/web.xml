<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0"
         metadata-complete="true">

    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>

    <display-name>Сервлет Controller</display-name>
    <servlet>
        <servlet-name>FrontController</servlet-name>
        <servlet-class>by.it.zakharenko.project.java.controller.FrontController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>/do</url-pattern>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>FilterUTF8</filter-name>
        <filter-class>by.it.zakharenko.project.java.filters.FilterUTF8</filter-class>
        <init-param>
            <param-name>encode</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>FilterUTF8</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
